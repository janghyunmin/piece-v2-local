<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:context=".view.certification.CertificationActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mDialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/parent_layout"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@drawable/c_dialog_back"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/top_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:lineHeight="29dp"
                    android:text="생체인증 해제"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:fontFamily="@font/pretendard_bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="생체인증을 사용하지 않도록 설정할까요?"
                    android:textColor="@color/c_8c919f"
                    android:textSize="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/top_title" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cancle_btn"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/btn_round_ff7878"
                    android:gravity="center"
                    android:text="취소"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    app:fontFamily="@font/pretendard_bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintLeft_toRightOf="@+id/confirm_btn"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title" />

                <TextView
                    android:id="@+id/confirm_btn"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/layout_round_eaecf0"
                    android:gravity="center"
                    android:text="확인"
                    android:textColor="@color/c_757983"
                    android:textSize="16dp"
                    android:layout_marginStart="16dp"
                    app:fontFamily="@font/pretendard_bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/cancle_btn"
                    app:layout_constraintTop_toBottomOf="@+id/title" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>